@model TestViewModel
@{ ViewData["Title"] = "Test Listesi";
                Layout = "~/Views/Shared/_Layout.cshtml"; }
@{if (Model.TestList.Count == 0)
    {
<span>Liste Boş</span> }
            else
            {
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Tarih</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var test in Model.TestList)
        {
<tr>

    <th scope="row">@test.testId</th>
    <td>
        <a href="/Test/SolveTest/@test.testId" class="btn">@test.title</a>
    </td>
    <td>@test.createdDate</td>
    <td>
        <div class="row">
            <a href="/Test/DeleteTest/@test.testId" class="btn btn-danger">Sil</a>
        </div>
    </td>
</tr>    }
    </tbody>
</table> } }